    %br

= form_tag atualizar_papeis_usuarios_path, method: 'put', :id => 'papeis-usuarios' do
  %table{ border: '1', id: 'usuarios' }
    %thead
      %tr
        %th
          = check_box_tag "check-all", checked = false
        %th E-mail
        - Papel.all.each do |papel|
          %th #{papel.nome}
    %tbody
      - @usuarios.each do |usuario|
        %tr
          %td
            = check_box_tag 'check-one', '', false, :class => 'check-one'
          %td
            = usuario.nome_completo
            %br
            = usuario.email
          - Papel.all.each do |papel|
            %td= check_box_tag "papeis[#{usuario.id}][]", papel.id,
              usuario.papeis.include?(papel), id: "#{usuario.email}#{[papel.nome]}"

  = submit_tag 'Salvar'
