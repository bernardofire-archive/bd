%p
  Título:
  = conteudo.titulo
%p
  Arquivo:
  = conteudo.arquivo
%p
  Link:
  = conteudo.link
%p
  Grande Área de Conhecimento:
  = Area.find_by_id(conteudo.grande_area_de_conhecimento).nome
%p
  Área de Conhecimento:
  = SubArea.find_by_id(conteudo.area_de_conhecimento).nome
- conteudo.autores.each do |autor|
  %p
    Autor:
    = autor.nome
  %p
    Curriculum Lattes:
    = autor.lattes
%p
  Campus:
  = conteudo.campus
%p
  Resumo:
  = conteudo.resumo
%p
  Direitos:
  = conteudo.direitos
