= f.input :titulo, label: 'Título'
= f.input :arquivo
= f.input :link
= f.input :grande_area_de_conhecimento, :as => :select, :collection => Area.all.map { |area| [area.nome, area.id] }, :input_html => { :class => "areas" }, :prompt => false, label: 'Grande Área de Conhecimento'
= f.input :area_de_conhecimento, :as => :select, :collection => Area.first.sub_areas.map {|sub_area| [sub_area.nome, sub_area.id] }, :input_html => { :class => "sub_areas" }, :prompt => false, label: 'Área de Conhecimento' 
#autores
  = f.semantic_fields_for :autores do |autor|
    = render 'autor_fields', :f => autor
  .links
    = link_to_add_association 'Adicionar autor', f, :autores
  = f.semantic_errors :autores
= f.input :campus, label: 'Campus da Instituição do Usuário'
= f.input :resumo
= f.input :direitos
